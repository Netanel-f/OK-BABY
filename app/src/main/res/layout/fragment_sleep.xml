<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SleepFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/report_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/title_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/sleep_report_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_report_title"
                android:textSize="@dimen/title_text_size"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <Button
                android:id="@+id/switch_to_graph_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/switch_to_graph_btn_label"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="visible"/>

            <Button
                android:id="@+id/switch_to_table_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/switch_to_table_btn_label"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- report table -->
        <com.cleveroad.adaptivetablelayout.AdaptiveTableLayout
            android:layout_margin="10dp"
            android:id="@+id/tableReportLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/report_header"
            android:elevation="0dp"
            app:cellMargin="1dp"
            app:fixedHeaders="true"
            app:solidRowHeaders="false"
            app:dragAndDropEnabled="true"
            android:visibility="visible"/>


    </RelativeLayout>

</FrameLayout>