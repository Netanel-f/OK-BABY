<!--                    android:id="@+id/type"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:contextClickable="false"-->
<!--                    android:spinnerMode="dropdown"-->
<!--                    android:textAlignment="center" />-->

            </LinearLayout>

            <!--Side-->
